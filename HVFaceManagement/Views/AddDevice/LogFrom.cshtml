<h4>Add Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">

            <div class="form-group">
                <label class="control-label">IP Adress</label>
                <input id="DeviceAdress" name="adress" type="text" value="192.168.1.201" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">User Id</label>
                <input id="User" type="text" name="name" value="admin" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Port</label>
                <input id="Port" type="text" name="port" value="80" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input id="Password" type="text" name="password" class="form-control" />

            </div>

            <div class="form-group">
                <input id="submit" type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $("#submit").click(function () {
           

            $.ajax({
                url: "/AddDevice/Login/",
                type: "GET",
                contentType: "application/json",
                dataType: 'json',

                success: function (data) {
                    if (data == true) {
                        window.location.assign("/dataTransfer/Index/")


                    }
                },

    </script>  }